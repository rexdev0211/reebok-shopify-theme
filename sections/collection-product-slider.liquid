<div class="col-prod-slider {% if section.settings.content_boxed == true %}section-boxed{% endif %}">
    {%- if section.settings.slider_title != blank -%}
    <h2 class="text-uppercase content-section-title">
        {{ section.settings.slider_title }}
    </h2>
    {%- endif -%}
    <p class="content-section-peregraph">
      {{ section.settings.new_peregrapfh }}
    </p>
    <div>
        <div class="content-slider">
            {% for block in section.blocks %}
            {% assign bset = block.settings %}
           
        <div class="content-slide" {{ block.shopify_attributes }}>
                <a class="content-slide-link" href="{{ bset.link }}">
                    <div class="position-relative">
                        {%- assign img_url = bset.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                        <div style="padding-top:{{ 1 | divided_by: bset.image.aspect_ratio | times: 100}}%;">
                        <img id="{{ img_id }}"
                            class="custom__image lazyload js "
                            src="{{ bset.image | img_url: '300x300' }}"
                            data-src="{{ img_url }}"
                            data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                            data-aspectratio="{{ bset.image.aspect_ratio }}"
                            data-sizes="auto"
                            alt="{{ bset.image.alt | escape }}">
                        </div>
                        <noscript>
                        {% capture image_size %}{{ max_height }}x{% endcapture %}
                        {{ bset.image | img_url: image_size, scale: 2, crop: 'top' | img_tag: bset.image.alt, 'custom__image' }}
                        </noscript>
                    </div>
    				<div class="conten_slider_information">
                        {%- if bset.title != blank -%}
                        <p class="content-slider-title">{{ bset.title }}</p>
                        {%- endif -%}


                        <p class="content_slider_text">{{ bset.text }}</p>


                        {%- if bset.link_text != blank -%} 
                        <p class="New_button">{{ bset.link_text }}</p>
                        {%- endif -%}

                   </div>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<style>
    #shopify-section-{{ section.id }} .content-slide {
        width: calc(100% / {{ section.settings.slides_per_view }}); 
    }

    #shopify-section-{{section.id}} .content-section-title {
        color: {{section.settings.text_color}};
    }


    #shopify-section-{{section.id}} .col-prod-slider {
        margin-top: {{ section.settings.top_spacing }}px;
        margin-bottom: {{ section.settings.bottom_spacing }}px;
    }

    #shopify-section-{{ section.id }} .slick-dots button:before {
        border-color: {{ section.settings.dot_color_border }};
    }

    #shopify-section-{{ section.id }} .slick-dots .slick-active button:before {
        background: {{ section.settings.dot_color }};
    }
</style>

{% if section.settings.slides_per_view < section.blocks.size %}
<script>
    $(document).ready(function() {
        $("#shopify-section-{{section.id}} .content-slider").slick({
            dots: false,
            arrows: true,
            infinite: false,
            slidesToShow: {{ section.settings.slides_per_view }},
            slidesToScroll: 4,
            responsive: [
                {
                    breakpoint: 749,
                    settings: {
                        slidesToShow: 1,
                        arrows: false
                    }
                }
            ]
        })
    });
</script>
{% endif %}

{% schema %}
{
    "name": "Collection/Product Slide",
    "settings": [
        {
            "type": "checkbox",
            "id": "content_boxed",
            "label": "Use boxed appearance for section",
            "default": true
        },
        {
            "type": "text",
            "id": "slider_title",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "new_peregrapfh",
            "label": "Sub-Title"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Title colour",
            "default": "#000000"
        },
        {
            "type": "range",
            "id": "top_spacing",
            "label": "Space from top",
            "min": 0,
            "max": 100,
            "step": 5,
            "default": 30,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "bottom_spacing",
            "label": "Space from bottom",
            "min": 0,
            "max": 100,
            "step": 5,
            "default": 15,
            "unit": "px"
        },
        {
            "type": "header",
            "content": "Slider settings"
        },
        {
            "type": "range",
            "id": "slides_per_view",
            "label": "Slides per view",
            "info": "For desktop. Mobile will default to one slide per view",
            "min": 1,
            "max": 5,
            "step": 1,
            "default": 4
        },
        {
            "type": "color",
            "id": "dot_color",
            "label": "Dot colour",
            "default": "#000000"
        },
        {
            "type": "color",
            "id": "dot_color_border",
            "label": "Dot border colour",
            "default": "#000000"
        }
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "html",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                },
                {
                    "type": "text",
                    "id": "link_text",
                    "label": "Link text"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Collection/Product Slide",
            "category": "Custom"
        }
    ]
}
{% endschema %}