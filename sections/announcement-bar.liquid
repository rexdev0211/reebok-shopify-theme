{%- if section.blocks.size > 0 -%}
{{ 'component-announcement-bar.css' | asset_url | stylesheet_tag }}

 <div class="announcement-bar" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'announcement' -%}

        {%- if block.settings.text != blank -%}
        <div class="announcement-bar__item"  style="--color-background: {{ block.settings.color_background }}">
        
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="announcement-bar__message announcement-bar__link link link--text focus-inset">
            {%- else -%}
            <p class="announcement-bar__message" style="--color-foreground: {{ block.settings.color_text }}">
          {%- endif -%}

            {{ block.settings.text | escape }}

            {%- if block.settings.link != blank -%}
              </a>
              {%- else -%} 
            </p>
            {%- endif -%}
          </div>
        {%- endif -%}

    {%- endcase -%}
  {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
  <script>
    $(document).ready(function() {
          $("#shopify-section-{{section.id}} .announcement-bar").slick({
              dots: false,
              arrows: false,
              slidesToShow: 1,
              autoplay: true,
              autoplaySpeed: 2000,
              infinite: true,
              speed: 0,
              fade: true,
              cssEase: 'linear'
          })
      });
  </script>
  {%- endif -%}
{%- endif -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "settings": [
    
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "color",
          "id": "color_background",
          "label": "Background color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "color_text",
          "label": "Text color",
          "default": "#000000"
        },
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
